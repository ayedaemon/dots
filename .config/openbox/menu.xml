<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
    <menu id="root-menu" label="OpenBox 3">
        <item label="Alacritty">
            <action name="Execute">
                <command>alacritty</command>
            </action>
        </item>

        <item label="Thunar">
            <action name="Execute">
                <command>thunar</command>
            </action>
        </item>

        <item label="Geany">
            <action name="Execute">
                <command>geany</command>
            </action>
        </item>

        <item label="Librewolf">
            <action name="Execute">
                <command>librewolf</command>
            </action>
        </item>
        <item label="Brave">
            <action name="Execute">
                <command>brave</command>
            </action>
        </item>

        <separator />

        <menu id="app-menu" execute="obmenu-generator" label="Applications" />

        <separator />

        <item label="Appearance Settings">
            <action name="Execute">
                <command>xfce4-appearance-settings</command>
            </action>
        </item>
        <item label="Power Settings">
            <action name="Execute">
                <command>xfce4-power-manager-settings</command>
            </action>
        </item>
        <item label="Audio Settings">
            <action name="Execute">
                <command>pavucontrol</command>
            </action>
        </item>
        <item label="Settings Manager">
            <action name="Execute">
                <command>xfce4-settings-manager</command>
            </action>
        </item>
        <menu id="40" label="OpenBox">
            <menu id="client-list-menu"/>
            <item label="Reconfigure"> <action name="Reconfigure"/> </item>
            <item label="Obconf">
                <action name="Execute">
                    <command>obconf</command>
                </action>
            </item>
            <separator/>
            <item label="Exit"> <action name="Exit"/> </item>
        </menu>
        <separator/>
        <menu id="Exit" label="System">
            <item label="Lock">
                <action name="Execute">
                    <command>betterlockscreen --lock</commmand>
                </action>
            </item>
            <item label="Sleep">
                <action name="Execute">
                    <command>systemctl suspend</commmand>
                </action>
            </item>
            <item label="Reboot">
                <action name="Execute">
                    <command>systemctl reboot</commmand>
                </action>
            </item>
            <item label="Poweroff">
                <action name="Execute">
                    <command>systemctl poweroff</commmand>
                </action>
            </item>


        <separator/>

    </menu>
</openbox_menu>
